FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      radiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
radiationModel  viewFactor;

viewFactorCoeffs
{
    smoothing false; //Smooth view factor matrix (use when in a close surface to force Sum(Fij = 1)
    constantEmissivity true; //constant emissivity on surfaces.
}

solverFreq 10;

absorptionEmissionModel constantAbsorptionEmission;

constantAbsorptionEmissionCoeffs
{
    absorptivity    absorptivity    [ 0 -1 0 0 0 0 0  ]     0;
    emissivity      emissivity      [ 0 -1 0 0 0 0 0  ]     0;
    E               E   			[ 1 -1 -3 0 0 0 0 ] 	0;
}

scatterModel    none;

