    (11.289244903874993 -0.4928990772282968      0)   //6  
    (11.289244903874993  0.4928990772282968      0)   //7
    (11.289244903874993 -0.4928990772282968   2000)   //8 
    (11.289244903874993  0.4928990772282968   2000)   //9
);
 
blocks
(
    hex (1 6 7 4 2 8 9 5) (100 1 200) simpleGrading ( ( (0.5 0.5 10) (0.5 0.5 0.1) ) 1 1)
);
 
