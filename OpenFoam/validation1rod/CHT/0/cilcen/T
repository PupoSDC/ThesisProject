{
    "cilcentop"         { type zeroGradient; }
    "cilcenbot"         { type zeroGradient; }
    ".*Wedge"           { type symmetry; }

    ".*_to_fluid"                  
    {
        type            compressible::turbulentTemperatureRadCoupledMixed;
        Tnbr            T;
        kappaMethod     solidThermo;
        QrNbr           Qr;
        Qr              none;
        kappaName       none;
        value           uniform 293.7;
    }
