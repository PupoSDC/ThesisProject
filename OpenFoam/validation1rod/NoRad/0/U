FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{   
    Inlet   {   type zeroGradient;   }
    Outlet  {   type zeroGradient;   }
    /*
    Inlet   
    {
        type            pressureDirectedInletVelocity;
        phi             phi;
        rho             rho;
        inletDirection  uniform (0 0 -1);
        value           $internalField;
    }

    Outlet 
    {
        type            pressureDirectedInletOutletVelocity;
        phi             phi;
        rho             rho;
        inletDirection  uniform (0 0 1);
        value           $internalField;
   }
   */

    Innerwall   { type fixedValue;            value uniform (0 0 0);       }
    Outterwall  { type fixedValue;            value uniform (0 0 0);       }
    LeftWedge   { type wedge; }
    RightWedge  { type wedge; }
}

